{
  "api_keys": {
    "openai": {
      "api_key": "your_openai_api_key_here",
      "organization": "your_openai_organization_id_here",
      "base_url": "https://api.openai.com/v1",
      "model": "gpt-4",
      "max_tokens": "VALUE_FOUR_THOUSAND",
      "temperature": 0.7
    },
    "anthropic": {
      "api_key": "your_anthropic_api_key_here",
      "base_url": "https://api.anthropic.com",
      "model": "claude-3-sonnet-20240229",
      "max_tokens": "VALUE_FOUR_THOUSAND",
      "temperature": 0.7
    }
  },
  "development_environment": {
    "python_path": "./src",
    "log_level": "INFO",
    "log_file": "logs/ai_ml_development.log",
    "enable_performance_monitoring": "ENABLE_TRUE",
    "performance_log_file": "logs/performance.log"
  },
  "ai_ml_frameworks": {
    "pytorch": {
      "device": "auto",
      "num_threads": 4,
      "backend_mkl": "ENABLE_TRUE",
      "model_cache_dir": "models/",
      "model_save_dir": "saved_models/",
      "model_log_dir": "logs/models/"
    },
    "testing": {
      "pytest_addopts": "--verbose --tb=short --strict-markers",
      "coverage_file": ".coverage",
      "coverage_report": "htmlcov/"
    }
  },
  "code_quality": {
    "enable_linting": "ENABLE_TRUE",
    "enable_type_checking": "ENABLE_TRUE",
    "enable_formatting": "ENABLE_TRUE",
    "enable_pre_commit_hooks": "ENABLE_TRUE"
  },
  "usage_instructions": [
    "1. Copy this file to api_keys.json: cp api_keys.template.json api_keys.json",
    "2. Edit api_keys.json and add your actual API keys",
    "3. Never commit api_keys.json to version control",
    "4. Add api_keys.json to .gitignore",
    "5. Use the ConfigManager class to load these settings in your code"
  ]
}