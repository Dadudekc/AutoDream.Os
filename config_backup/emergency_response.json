{
  "emergency_response_system": {
    "name": "Emergency Response System",
    "version": "1.0.0",
    "description": "Comprehensive emergency response protocols for system failures",
    "contract": "EMERGENCY-RESTORE-005: Emergency Response Protocol (400 pts)",
    "author": "Agent-6 (Data & Analytics Specialist)",
    "license": "MIT",
    
    "monitoring": {
      "monitoring_interval": 15,
      "enable_automated_detection": true,
      "enable_health_integration": true,
      "enable_auto_recovery": true,
      "enable_notifications": true
    },
    
    "failure_thresholds": {
      "contract_availability": 30,
      "agent_idle_time": 900,
      "system_response_time": 5000,
      "error_rate": 0.20,
      "health_score": 0.70,
      "workflow_completion_rate": 0.40,
      "agent_engagement": 0.90,
      "system_synchronization": 0.95
    },
    
    "emergency_levels": {
      "low": {
        "response_time": 300,
        "escalation_time": 1800,
        "notification_channels": ["log", "email"]
      },
      "medium": {
        "response_time": 180,
        "escalation_time": 900,
        "notification_channels": ["log", "email", "slack"]
      },
      "high": {
        "response_time": 120,
        "escalation_time": 600,
        "notification_channels": ["log", "email", "slack", "sms"]
      },
      "critical": {
        "response_time": 60,
        "escalation_time": 300,
        "notification_channels": ["log", "email", "slack", "sms", "phone"]
      },
      "code_black": {
        "response_time": 30,
        "escalation_time": 120,
        "notification_channels": ["log", "email", "slack", "sms", "phone", "emergency_broadcast"]
      }
    },
    
    "protocols": {
      "workflow_restoration": {
        "enabled": true,
        "priority": "CRITICAL",
        "auto_activate": true,
        "recovery_timeout": 1800
      },
      "crisis_management": {
        "enabled": true,
        "priority": "HIGH",
        "auto_activate": true,
        "recovery_timeout": 1200
      },
      "system_failure": {
        "enabled": true,
        "priority": "CRITICAL",
        "auto_activate": true,
        "recovery_timeout": 2400
      }
    },
    
    "recovery_procedures": {
      "enable_automated_recovery": true,
      "max_recovery_attempts": 3,
      "recovery_timeout": 300,
      "enable_rollback": true,
      "enable_backup_restoration": true
    },
    
    "documentation": {
      "enable_automatic_documentation": true,
      "documentation_format": "json",
      "include_lessons_learned": true,
      "include_response_timeline": true,
      "include_validation_results": true,
      "save_location": "reports/emergency"
    },
    
    "notifications": {
      "enable_email_notifications": true,
      "enable_slack_notifications": true,
      "enable_sms_notifications": false,
      "enable_phone_notifications": false,
      "notification_recipients": ["system_admin", "emergency_team", "captain_coordinator"],
      "notification_frequency": "immediate"
    },
    
    "integration": {
      "health_monitoring": {
        "enabled": true,
        "integration_type": "full",
        "alert_forwarding": true,
        "health_data_sharing": true
      },
      "contract_system": {
        "enabled": true,
        "integration_type": "monitoring",
        "emergency_contract_generation": true,
        "contract_validation": true
      },
      "messaging_system": {
        "enabled": true,
        "integration_type": "emergency_broadcast",
        "bulk_messaging": true,
        "priority_messaging": true
      },
      "agent_coordination": {
        "enabled": true,
        "integration_type": "mobilization",
        "agent_status_monitoring": true,
        "emergency_activation": true
      }
    },
    
    "escalation": {
      "enable_automatic_escalation": true,
      "escalation_levels": ["low", "medium", "high", "critical", "code_black"],
      "escalation_timeouts": {
        "low": 1800,
        "medium": 900,
        "high": 600,
        "critical": 300,
        "code_black": 120
      },
      "escalation_actions": {
        "low": ["increase_monitoring", "log_warning"],
        "medium": ["notify_team", "activate_protocol"],
        "high": ["notify_captain", "activate_emergency_protocol"],
        "critical": ["activate_code_black", "emergency_broadcast"],
        "code_black": ["disaster_recovery", "full_system_lockdown"]
      }
    },
    
    "validation": {
      "enable_automatic_validation": true,
      "validation_criteria": {
        "contract_availability": "> 40",
        "agent_engagement": "> 90%",
        "system_health": "> 70%",
        "workflow_completion": "> 60%",
        "system_synchronization": "> 95%"
      },
      "validation_timeout": 300,
      "validation_retries": 3
    },
    
    "logging": {
      "log_level": "INFO",
      "enable_emergency_logging": true,
      "log_retention_days": 30,
      "log_rotation": true,
      "log_format": "detailed",
      "include_metrics": true,
      "include_timestamps": true
    },
    
    "performance": {
      "max_concurrent_emergencies": 5,
      "max_response_time": 60,
      "max_recovery_time": 1800,
      "enable_performance_monitoring": true,
      "performance_metrics": ["response_time", "recovery_time", "success_rate"]
    },
    
    "security": {
      "enable_audit_logging": true,
      "enable_access_control": true,
      "require_authentication": false,
      "enable_encryption": false,
      "security_level": "standard"
    }
  }
}
