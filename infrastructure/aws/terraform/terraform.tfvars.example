# V3-001: Cloud Infrastructure Setup - Terraform Variables Example
# Agent-1: Architecture Foundation Specialist
# 
# Copy this file to terraform.tfvars and update with your values

aws_region = "us-west-2"
environment = "dev"
project_name = "swarm-v3"

# Database credentials (use strong passwords in production)
db_password = "your-secure-database-password"
redis_auth_token = "your-secure-redis-token"

# Scaling configuration
node_group_desired_size = 2
node_group_max_size = 4
node_group_min_size = 1

# Database configuration
db_instance_class = "db.t3.micro"
db_allocated_storage = 20
db_max_allocated_storage = 100

# Redis configuration
redis_node_type = "cache.t3.micro"
redis_num_cache_nodes = 1



