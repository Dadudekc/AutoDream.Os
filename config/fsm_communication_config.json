{
  "system": {
    "name": "FSM-Communication Integration System",
    "version": "2.0.0",
    "description": "Integrated FSM and Communication system for Agent Cellphone V2",
    "author": "FSM-Communication Integration Specialist"
  },
  "workspace_path": "agent_workspaces",
  "inbox_path": "message_data",
  "fsm_data_path": "fsm_data",
  "logs_path": "logs",

  "communication": {
    "heartbeat_interval": 30,
    "message_timeout": 300,
    "max_message_history": 10000,
    "retry_attempts": 3,
    "retry_delay": 5,
    "broadcast_enabled": true,
    "private_messaging_enabled": true,
    "message_encryption": false
  },

  "fsm": {
    "task_timeout": 3600,
    "max_concurrent_tasks": 100,
    "coordination_interval": 60,
    "state_transition_validation": true,
    "evidence_required": true,
    "auto_cleanup_enabled": true,
    "cleanup_interval": 86400,
    "max_task_history": 1000
  },

  "bridge": {
    "event_processing_interval": 0.1,
    "coordination_check_interval": 60,
    "cleanup_interval": 3600,
    "max_event_history": 5000,
    "event_ttl": 86400,
    "coordination_timeout": 300,
    "retry_failed_events": true,
    "max_retry_attempts": 3
  },

  "agents": {
    "default_capabilities": [
      "task_execution",
      "status_reporting",
      "coordination",
      "communication"
    ],
    "coordination_agents": [
      "Agent-1",
      "Agent-5"
    ],
    "specialized_agents": {
      "Agent-2": ["communication", "validation"],
      "Agent-3": ["testing", "quality"],
      "Agent-4": ["monitoring", "analytics"],
      "Agent-6": ["development", "integration"],
      "Agent-7": ["web", "ui"],
      "Agent-8": ["gaming", "entertainment"]
    }
  },

  "messaging": {
    "default_priority": "NORMAL",
    "urgent_timeout": 60,
    "high_timeout": 300,
    "normal_timeout": 1800,
    "low_timeout": 7200,
    "message_formats": ["json", "text"],
    "compression_enabled": false,
    "batch_processing": true,
    "batch_size": 100,
    "batch_timeout": 5
  },

  "monitoring": {
    "health_check_interval": 30,
    "performance_metrics_enabled": true,
    "alerting_enabled": true,
    "log_level": "INFO",
    "metrics_retention": 86400,
    "status_broadcast_interval": 60
  },

  "security": {
    "authentication_required": false,
    "authorization_enabled": false,
    "message_validation": true,
    "input_sanitization": true,
    "rate_limiting": false,
    "max_messages_per_minute": 1000
  },

  "integration": {
    "auto_discovery_enabled": true,
    "plugin_system_enabled": true,
    "webhook_support": false,
    "api_endpoints": {
      "status": "/api/v1/status",
      "tasks": "/api/v1/tasks",
      "agents": "/api/v1/agents",
      "messages": "/api/v1/messages"
    }
  },

  "development": {
    "debug_mode": false,
    "verbose_logging": false,
    "mock_services": false,
    "test_mode": false,
    "development_features": [
      "hot_reload",
      "live_debugging",
      "performance_profiling"
    ]
  }
}
