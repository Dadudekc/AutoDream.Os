{
  "file_size_limits": {
    "max_directory_size_mb": 100,
    "max_file_size_mb": 10,
    "alert_threshold_percent": 80,
    "critical_threshold_percent": 95
  },
  "archiving": {
    "age_threshold_days": 30,
    "archive_extensions": [
      ".log",
      ".tmp",
      ".bak",
      ".old",
      ".cache",
      ".pyc"
    ],
    "exclude_patterns": [
      "*.py",
      "*.md",
      "*.json",
      "*.txt",
      "*.yml",
      "*.yaml"
    ],
    "archive_compression": true,
    "max_archive_age_days": 365
  },
  "cleanup": {
    "remove_empty_dirs": true,
    "cleanup_temp_files": true,
    "cleanup_cache_dirs": true,
    "consolidate_similar": false,
    "remove_duplicate_files": false
  },
  "scheduling": {
    "daily_cleanup": true,
    "weekly_archive": true,
    "monthly_report": true,
    "size_check_interval_hours": 6,
    "cleanup_schedule": "02:00",
    "archive_schedule": "03:00",
    "report_schedule": "04:00"
  },
  "alerts": {
    "email_enabled": false,
    "slack_enabled": false,
    "discord_enabled": false,
    "console_alerts": true,
    "log_alerts": true,
    "email_recipients": [],
    "slack_webhook_url": "",
    "discord_webhook_url": ""
  },
  "monitoring": {
    "track_file_changes": true,
    "monitor_directory_growth": true,
    "log_performance_metrics": true,
    "generate_health_reports": true,
    "backup_before_cleanup": true
  },
  "exclusions": {
    "skip_directories": [
      ".git",
      "__pycache__",
      "node_modules",
      ".pytest_cache",
      ".vscode",
      ".idea",
      "venv",
      ".env"
    ],
    "skip_files": [
      ".gitignore",
      "requirements*.txt",
      "pyproject.toml",
      "package.json",
      "Makefile"
    ]
  },
  "notifications": {
    "success_notifications": false,
    "failure_notifications": true,
    "weekly_summary": true,
    "alert_aggregation": true
  }
}
