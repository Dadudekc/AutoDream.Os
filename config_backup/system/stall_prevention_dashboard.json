{
  "dashboard_config": {
    "version": "1.0.0",
    "name": "Stall Prevention Performance Dashboard",
    "description": "Comprehensive performance monitoring for stall prevention systems",
    "author": "Agent-6 - Performance Optimization Manager"
  },
  
  "refresh_interval_seconds": 5,
  "metrics_retention_hours": 24,
  "max_metrics_history": 1000,
  "max_alerts_history": 100,
  
  "alert_thresholds": {
    "response_time_ms": 1000,
    "stall_detection_rate": 0.1,
    "recovery_time_ms": 5000,
    "system_health_score": 0.7,
    "cpu_usage_percent": 80,
    "memory_usage_percent": 85,
    "disk_usage_percent": 90
  },
  
  "health_weights": {
    "cpu_usage": 0.25,
    "memory_usage": 0.25,
    "response_time": 0.3,
    "error_rate": 0.2
  },
  
  "stall_prevention_metrics": {
    "cpu_usage": {
      "enabled": true,
      "threshold": 80.0,
      "unit": "percent",
      "description": "CPU usage percentage"
    },
    "memory_usage": {
      "enabled": true,
      "threshold": 85.0,
      "unit": "percent",
      "description": "Memory usage percentage"
    },
    "response_time": {
      "enabled": true,
      "threshold": 1000.0,
      "unit": "ms",
      "description": "System response time"
    },
    "stall_detection_rate": {
      "enabled": true,
      "threshold": 0.1,
      "unit": "events/minute",
      "description": "Stall detection rate"
    },
    "recovery_time": {
      "enabled": true,
      "threshold": 5000.0,
      "unit": "ms",
      "description": "Stall recovery time"
    },
    "agent_coordination_latency": {
      "enabled": true,
      "threshold": 2000.0,
      "unit": "ms",
      "description": "Agent coordination latency"
    }
  },
  
  "health_monitoring": {
    "stall_prevention_service": {
      "enabled": true,
      "check_interval_seconds": 30,
      "critical_threshold": 0.3,
      "warning_threshold": 0.7
    },
    "agent_coordination": {
      "enabled": true,
      "check_interval_seconds": 15,
      "critical_threshold": 0.4,
      "warning_threshold": 0.8
    },
    "system_resources": {
      "enabled": true,
      "check_interval_seconds": 10,
      "critical_threshold": 0.5,
      "warning_threshold": 0.8
    },
    "communication_channels": {
      "enabled": true,
      "check_interval_seconds": 20,
      "critical_threshold": 0.6,
      "warning_threshold": 0.85
    }
  },
  
  "performance_optimization": {
    "auto_optimization_enabled": false,
    "optimization_interval_minutes": 60,
    "performance_baseline_calculation": true,
    "trend_analysis_enabled": true,
    "anomaly_detection_enabled": true
  },
  
  "reporting": {
    "generate_performance_reports": true,
    "report_interval_hours": 1,
    "export_formats": ["json", "csv"],
    "include_recommendations": true,
    "include_trends": true
  },
  
  "integration": {
    "stall_prevention_service": {
      "enabled": true,
      "service_path": "src.services.agent_stall_prevention_service.AgentStallPreventionService"
    },
    "performance_monitor": {
      "enabled": true,
      "service_path": "src.core.performance.monitoring.performance_monitor.PerformanceMonitor"
    },
    "health_monitor": {
      "enabled": true,
      "service_path": "src.core.emergency.modules.emergency_monitoring.EmergencyMonitoring"
    }
  },
  
  "notifications": {
    "email_alerts": false,
    "slack_notifications": false,
    "console_alerts": true,
    "log_alerts": true,
    "alert_retention_hours": 48
  },
  
  "data_retention": {
    "metrics_retention_days": 30,
    "alerts_retention_days": 7,
    "performance_history_days": 90,
    "cleanup_interval_hours": 6
  }
}
