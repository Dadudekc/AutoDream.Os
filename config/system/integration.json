{
  "integration_infrastructure": {
    "version": "1.0.0",
    "description": "Configuration for Agent_Cellphone_V2_Repository integration infrastructure",
    "last_updated": "2025-01-20",

    "api_management": {
      "enabled": true,
      "host": "localhost",
      "port": 8080,
      "base_path": "/api",
      "cors_enabled": true,
      "rate_limiting": {
        "enabled": true,
        "default_limit": 100,
        "window_size": 60,
        "per_endpoint_limits": {
          "/api/health": 1000,
          "/api/metrics": 500,
          "/api/status": 500
        }
      },
      "authentication": {
        "enabled": true,
        "type": "bearer_token",
        "token_expiry": 3600,
        "public_endpoints": [
          "/api/health",
          "/api/status"
        ]
      },
      "logging": {
        "level": "INFO",
        "log_requests": true,
        "log_responses": false,
        "log_request_body": false
      }
    },

    "message_queue": {
      "enabled": true,
      "max_size": 10000,
      "priority_levels": {
        "LOW": 1,
        "NORMAL": 2,
        "HIGH": 3,
        "URGENT": 4,
        "CRITICAL": 5
      },
      "retry_policy": {
        "max_retries": 3,
        "retry_delay": 1.0,
        "exponential_backoff": true
      },
      "persistence": {
        "enabled": false,
        "storage_path": "./data/message_queue",
        "backup_interval": 300
      }
    },

    "caching": {
      "enabled": true,
      "max_size": 1000,
      "default_ttl": 3600,
      "eviction_policy": "LRU",
      "compression": {
        "enabled": false,
        "algorithm": "gzip",
        "threshold": 1024
      },
      "distributed": {
        "enabled": false,
        "nodes": [],
        "sync_interval": 60
      }
    },

    "circuit_breaker": {
      "enabled": true,
      "failure_threshold": 5,
      "recovery_timeout": 60,
      "monitoring": {
        "enabled": true,
        "metrics_collection": true,
        "alerting": false
      }
    },

    "retry_middleware": {
      "enabled": true,
      "max_retries": 3,
      "base_delay": 1.0,
      "max_delay": 60.0,
      "jitter": true,
      "retryable_exceptions": [
        "ConnectionError",
        "TimeoutError",
        "ServiceUnavailableError"
      ]
    },

    "data_transformation": {
      "enabled": true,
      "supported_formats": [
        "json",
        "xml",
        "yaml",
        "pickle",
        "base64",
        "hash"
      ],
      "validation": {
        "enabled": true,
        "strict_mode": false,
        "custom_validators": {}
      }
    },

    "service_registry": {
      "enabled": true,
      "auto_discovery": true,
      "health_check_interval": 30,
      "service_timeout": 10,
      "load_balancing": {
        "enabled": false,
        "algorithm": "round_robin",
        "health_check_weight": 0.3
      }
    },

    "monitoring": {
      "enabled": true,
      "metrics_collection": true,
      "health_checks": true,
      "performance_tracking": true,
      "alerting": {
        "enabled": false,
        "channels": [],
        "thresholds": {}
      },
      "dashboards": {
        "enabled": true,
        "port": 8081,
        "auto_refresh": 30
      }
    },

    "security": {
      "enabled": true,
      "encryption": {
        "en_transit": true,
        "at_rest": false,
        "algorithm": "AES-256"
      },
      "access_control": {
        "enabled": true,
        "role_based": true,
        "default_role": "readonly"
      },
      "audit_logging": {
        "enabled": true,
        "log_level": "INFO",
        "retention_days": 90
      }
    },

    "performance": {
      "max_workers": 10,
      "connection_pool_size": 20,
      "timeout": 30,
      "compression": {
        "enabled": true,
        "algorithm": "gzip",
        "min_size": 1024
      },
      "optimization": {
        "connection_reuse": true,
        "keep_alive": true,
        "pipelining": false
      }
    },

    "deployment": {
      "environment": "development",
      "auto_restart": true,
      "graceful_shutdown": true,
      "health_check_endpoint": "/api/health",
      "readiness_probe": "/api/status",
      "liveness_probe": "/api/health"
    },

    "integration_points": {
      "external_apis": {
        "enabled": false,
        "endpoints": [],
        "authentication": {},
        "rate_limiting": {}
      },
      "databases": {
        "enabled": false,
        "connections": [],
        "connection_pooling": true
      },
      "message_brokers": {
        "enabled": false,
        "brokers": [],
        "topics": [],
        "consumer_groups": []
      }
    },

    "logging_config": {
      "level": "INFO",
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
      "handlers": {
        "console": {
          "enabled": true,
          "level": "INFO"
        },
        "file": {
          "enabled": true,
          "level": "DEBUG",
          "path": "./logs/integration.log",
          "max_size": "10MB",
          "backup_count": 5
        }
      }
    },

    "testing": {
      "enabled": true,
      "test_coverage": {
        "minimum": 90,
        "target": 95
      },
      "performance_benchmarks": {
        "enabled": true,
        "thresholds": {
          "response_time": 100,
          "throughput": 1000,
          "error_rate": 0.01
        }
      },
      "integration_tests": {
        "enabled": true,
        "timeout": 30,
        "retry_count": 3
      }
    }
  }
}
